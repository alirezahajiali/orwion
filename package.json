{
  "name": "orwion-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.10.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "pnpm -r format",
    "dev:all": "turbo run dev --parallel",
    "clean": "pnpm -r exec rimraf dist .turbo node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "turbo": "^2.1.0",
    "typescript": "^5.6.3"
  }
}
